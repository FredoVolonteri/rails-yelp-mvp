

<h1>Here are all your restaurants</h1>

<div class="container">
  <% @restaurants.each do |resto|%>
  <div class="row">
    <div class="col-xs-12 col-sm-4">
      <!-- insert <div class="card"> -->
      <ul>
      <li>
        <h2><%= link_to resto.name, restaurant_path(resto) %></h2>
        <p><%= resto.address %></p>
        <p><%= resto.category %></p>
        <h5><%= link_to "Add a new review", new_restaurant_review_path(resto) %></h5>
      </li>
    </ul>
  <% end  %>
  <div class="link-top-right">
    <%= link_to "Add a new restaurant", new_restaurant_path %>
    </div>
  </div>
</div>
