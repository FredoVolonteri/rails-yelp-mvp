

<h1 class="text-center">Check out these amazing restaurants</h1>

<div class="container">
  <div class="row">
   <% @restaurants.each do |resto|%>
      <div class="col-xs-12 col-sm-4">
        <!-- insert <div class="card"> -->
        <div class="card">
        <ul>
          <li>
            <h2><%= link_to resto.name, restaurant_path(resto) %></h2>
            <p><%= resto.address %></p>
            <p><%= resto.category %></p>

            <h5><%= link_to "Add a new review", new_restaurant_review_path(resto) %></h5>
          </li>
      </ul>
      </div>
    </div>
    <% end  %>
  </div>
    <div class="link-top-right">
      <h1>
        <%= link_to "Add a new restaurant", new_restaurant_path %>
      </h1>
      </div>
</div>
